@model PasqualiSolution.Web.Models.RegisterPFModel

<form asp-action="RegisterDelete">
    <input asp-for="Id" hidden>
    <br/>
    <div class="container border p-3">
        <h1 class="text-primary">Delete Register</h1>

        <hr/>
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" disabled class="form-control"/>
            </div>
            <div class="col-2">
                <label asp-for="IncomeValue" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="IncomeValue" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="BirthDate" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="BirthDate" disabled class="form-control" type="text"
                       value="@(Model.BirthDate.HasValue ? Model.BirthDate.Value.ToString("dd/MM/yyyy") : string.Empty)" />
            </div>
            <div class="col-2">
                <label asp-for="Cpf" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Cpf" disabled class="form-control" />
            </div>

            <div class="col-5 offset-2">
                <a asp-action="RegisterPFIndex" class="btn-primary btn form-control ">Back to List</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial">
}