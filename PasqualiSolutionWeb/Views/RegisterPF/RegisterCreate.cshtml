@model PasqualiSolution.Web.Models.RegisterPFModel

<form asp-action="RegisterCreate">
    <br/>
    <div class="container border p-3">
        <h1 class="text-primary">Create Register</h1>

        <hr/>
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size=20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control" autocomplete="off"/>
                <span asp-validation-for="Name" class="text-danger"/>
            </div>
            <div class="col-2">
                <label asp-for="BirthDate" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="BirthDate" class="form-control" type="date" autocomplete="off"/>
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="IncomeValue" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="IncomeValue" class="form-control" rows="5" autocomplete="off"></input>
                <span asp-validation-for="IncomeValue" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Cpf" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Cpf" class="form-control" autocomplete="off"/>
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
            
            <div class="col-5 offset-2">
                <a asp-action="RegisterPFIndex" class="btn-primary btn form-control ">Back to List</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial">
}